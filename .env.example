####################################
# LlamaChain Environment Configuration
####################################

# Application Settings
ENVIRONMENT=development
DEBUG=False
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-me

# Database Settings
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/llamachain

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
JWT_SECRET=your-jwt-secret-change-me
API_RATE_LIMIT=100

# Blockchain RPC URLs
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
ETHEREUM_WS_URL=wss://mainnet.infura.io/ws/v3/your-infura-key
ETHEREUM_TESTNET_RPC_URL=https://goerli.infura.io/v3/your-infura-key

SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com
SOLANA_TESTNET_RPC_URL=https://api.devnet.solana.com

# Security Settings
SECURITY_SCAN_TIMEOUT=60
SECURITY_MAX_CONTRACT_SIZE=500000

# Analytics Settings
ANALYTICS_CACHE_TTL=3600
ANALYTICS_MAX_BLOCKS=1000

# Machine Learning Settings
ML_MODEL_PATH=./models
ML_EMBEDDINGS_DIMENSION=768

# Worker Settings
WORKER_CONCURRENCY=4
WORKER_QUEUE_URL=redis://localhost:6379/0

# Web Dashboard Settings
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=3000

# Redis Connection
REDIS_URL=redis://localhost:6379/0

# Machine Learning
# Set to true to use AI features (requires more resources)
ENABLE_ML_FEATURES=true
# HuggingFace token for downloading models (if needed)
HUGGINGFACE_TOKEN=your-huggingface-token-here

# External Services
# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your-etherscan-api-key-here
# CoinGecko API key for price data
COINGECKO_API_KEY=your-coingecko-api-key-here 